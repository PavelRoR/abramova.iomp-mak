/*Табы*/
.modules
	width: 100%;
	// overflow hidden
.modules-buttons
	padding: 0
	width 100%
	// display table
	// display flex
	// // align-items: flex-start
	// justify-content: flex-start
	margin-bottom: 15px
.modules-buttons li
	display: inline-block
	list-style none
	cursor: pointer;
	color: #8581DF
	transition: all .3s ease-out
	font-size: 48px
	font-weight: bold
	line-height: 59px
	text-decoration underline
	position relative
	&:nth-child(2)
		margin 0 110px
	&:hover
	&.active
		color: #3D36DB
		span
			transition: all .3s ease
			position absolute
			z-index 30
			width 100%
			height 100%
			top 0
			left 0
			&:before
				content: ''
				display block
				position absolute
				width 514px
				height 214px
				background-image url(../img/images/course-plan.png)
				background-repeat no-repeat
				background-position: center
				left -150px
				right 0
				margin 0 auto
				top calc(50% - 107px)
				z-index 1
.module-body
	display: none;
	transition: all .8s ease-in;
	animation-name: module;
	animation-duration: .3s;
@keyframes module
	0%
		opacity: 0;
	50%
		opacity: .5
	100%
		opacity: 1;
		height: 100%;
.module-title
	font-size: 36px
	font-weight: normal
	color #959595;
	margin-bottom: 50px
.module-list
	position relative
	&:before
		content: ''
		display block
		position absolute
		width 3px
		height 99%
		left -40px
		top 0
		background-color: #5D4AD0
	&:after
		content: ''
		display block
		position absolute
		left -40px
		width 30px
		height 3px
		background-color: #5D4AD0
		background-image: linear-gradient(to right, #5D4AD0, #AF87C1)
	li
		list-style: none
		margin-bottom: 35px
		font-size: 20px
		font-weight: 500
		display flex
		span
			color #AF87C1
			background-image: linear-gradient(to right, #5D4AD0, #AF87C1)
			background-clip: text
			-webkit-text-fill-color transparent
			font-size: 26px
			font-weight: 600
			line-height: 34px
			flex-shrink: 0;
			margin-right: 30px
		&:last-child
			margin-bottom: 0
	&-1
		margin-bottom: 70px
		&:before
			background-image: linear-gradient(to top, #5D4AD0, #AF87C1)
		&:after
			top 99%
	&-2
		margin-bottom: 70px
		&:before
			background-image: linear-gradient(to bottom , #5D4AD0, #AF87C1)
			height 95%
		&:after
			top 0
