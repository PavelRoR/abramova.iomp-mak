.can-block-title
	font-size: 30px
	font-weight: bold
	color #8480E1
	padding 0
	width auto
	height auto
	cursor pointer
	transition: all .3s ease
	position relative
	span
		position absolute
		z-index 30
		width 100%
		height 100%
		top 0
		left 0
		&:before
			content: ''
			display block
			position absolute
			width 514px
			height 214px
			background-image url(../img/images/can.png)
			background-repeat no-repeat
			background-position: center
			background-size contain
			left -150px
			right 0
			margin 0 auto
			top calc(50% - 107px)
			transition: all .4s ease
			z-index 1
			opacity 0
			transform: scale(.1)
	&:hover
	&.slick-current
		color: #3D36DB;
		color: #3D36DB;
		span:before
			opacity 1
			transform: scale(1)
