.can-block-list
	counter-reset: my-counter;
	li
		padding-left: 55px
		list-style none
		min-height 35px
		margin-bottom: 50px
		font-size: 20px
		font-weight: 500
		counter-increment: my-counter;
		position: relative;
		&:last-child
			margin-bottom: 0
		&:before
			content: counter(my-counter);
			width: 35px;
			height: 35px;
			top 0
			left 0
			position absolute
			line-height: 35px
			background-color: #D9C1D0
			background-image: linear-gradient(233.03deg, #3D36DB 0%, rgba(203, 90, 90, 0) 118.75%);
			border-radius: 50px
			font-size: 24px
			font-weight: bold
			color #F3F3F3;
			text-align center
	&-2
		counter-reset: my-counter 4;
	&-3
		counter-reset: my-counter 3;
