#main
	padding 0 0 50px
	text-align: center
	min-height calc(100vh - 76px)
	background-image url(../img/images/video.png),url(../img/images/video-1.png),url(../img/images/video-2.png)
	background-repeat no-repeat, no-repeat, no-repeat
	background-position: center, center left -90px, center right -90px
	background-size contain, auto,auto
.main-title
	font-size: 26px
	font-weight: normal
	line-height: 1.3
	display inline-block
	// text-transform: uppercase
	span
		font-weight: bold
		color #FB4B4B;
.main-subtitle
	font-size: 24px
	font-weight: 600
	line-height: 36px
	margin 35px 0
	span
		display block
		font-weight:  bold
		font-size: 26px
		color #FB4B4B;
.form-promo
	margin-top: 40px
.inputrow
	width 100%
	max-width: 360px;
	margin 0 auto 10px
.intl-tel-input
	display block
.intl-tel-input .country-list
	z-index 200
	max-width: 360px;
.intl-tel-input .selected-flag
	border-top-left-radius 47px
	border-bottom-left-radius 47px
.input
	background-color: transparent
	display block
	border: 2px solid #FB4B4B;
	border-radius: 48px;
	color: #454545;
	font-size: 18px;
	font-weight: normal;
	// text-align center
	padding 17px 20px
	transition: all .3s ease
	width 100%
@-webkit-keyframes autofill
	to
		font-size: 18px
		color: #454545;
		background-color: transparent
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.input:active
input:-internal-autofill-selected
	background-color: transparent !important
.alert-message {
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-weight: 600
	line-height: 1
}
.checking {
	display: table;
	width 100%
	max-width 470px
	margin: 5px auto 0
	text-align: left
}
.checking-main
	margin-left: 0
.checking .check-label {
	line-height: 40px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 40px;
	text-align: left;
	font-size: 12px
	font-weight: 100
	color #5c5b5b
}

.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed
	display: inline
	color #5c5b5b
	&:focus
		border-bottom: 1px dashed
		color #5c5b5b
	&:hover
		border-bottom: none
		text-decoration: none
		color #5c5b5b

.checking .check-label:before {
	content: '';
	background-color: #aaa;
	position: absolute;
	left: 0;
	top: 3px;
	width: 31px;
	height: 31px;
	border none
	border-radius: 50px
}

.checking .check-label:after {
	content: '';
	position: absolute;
	left: 10px;
	top: -10px;
	width: 11px;
	height: 18px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff;
	border-right: 2px solid #fff;
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + .check-label:before {
	background-color: #FB4B4B

}

.check:checked + .check-label:after {
	opacity: 1;
	top: 7px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}
