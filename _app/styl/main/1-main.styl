#main
	padding 0 0 90px
.main-info
	position relative
	z-index 30
.main-title
	font-size: 30px
	font-weight: normal
	color: #393939;
	span
		font-weight: bold
.main-subtitle
	font-size: 18px
	font-weight: normal
	color #5E5D5D
	margin: 30px 0
	span
		color: #FF4848;
		font-weight: 600
.main-date
	font-size: 20px
	font-weight: bold
	color #393939
	margin-bottom: 10px
	span
		color #FB4B4B;
		font-size: 24px
		font-weight: normal
		display inline-block
.main-text
	font-size: 18px
	font-weight: 600
	color: #5E5D5D;
	margin 30px 0 35px
.main-author
	color: #B8B8B8;
	font-size: 24px
	font-weight: bold
	margin-top: 30px
.main-img
	position relative
	padding-top: 100%
	img
		position absolute
		top -100px
		right -160px
		z-index 0