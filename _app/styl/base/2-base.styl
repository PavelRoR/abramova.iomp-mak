*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: M
	color #5E5D5D
	background-color #F3F3F3
	line-height: 1.56
.wrapper
	overflow hidden
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		// outline: 1px solid  #fff
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display inline-block
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff
	width: auto
	min-width 286px
	font-size: 18px
	font-weight: bold
	background-color: #FB4B4B;
	box-shadow: 0px 0px 27px 12px rgba(255, 112, 112, 0.29);
	border-radius: 48px;
	padding 19px 34px
	transition: all .3s ease
	position relative
	z-index 99
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #fff
		background-color: #DD4444
		box-shadow: 0px 0px 18px 10px rgba(255, 112, 112, 0.39);
		transform: translateY(4px)
	&-wrapper-center
		text-align center
.general-title
	font-size: 30px
	font-weight: bold
	margin-bottom: 50px
	color #393939;
	&-center
		text-align center
.general-img
	position absolute
.general-text
	color #5E5D5D
	span
		color #FB4B4B
		font-weight: 600
.general-list
	li
		list-style: none
	&-1
		li
			position relative
			margin-bottom: 25px
			padding-left: 34px
			font-size: 20px
			&:last-child
				margin-bottom: 0
			&:before
				content: ''
				display block
				position absolute
				top 15px
				left 0
				width 17px
				height 3px
				background-color: #FB4B4B;
			span
				font-weight: 600
	&-2
		li
			margin-bottom: 30px
			padding-left: 75px
			font-size: 20px
			font-weight: 300
			color: #454545
			position relative
			span
				font-weight: 500
				display inline-block
			&:last-child
				margin-bottom: 0
			&:before
				content: ''
				display block
				position absolute
				top 0
				left 0
				border-radius: 50px
				border: 3px solid #DFDFDF;
				width 41px
				height 41px
			&:after
				content: ''
				display block
				position absolute
				width 50px
				height 27px
				border-bottom: 4px solid #FB4B4B
				border-left: 4px solid #FB4B4B
				transform: rotate(-43deg)
				top: -15px;
				left: 4px;